<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Indie+Flower&family=Kanit:wght@400;700&display=swap" rel="stylesheet">
    <title>Blog | <%= title %></title>
</head>
<body>
    <!-- header -->
    <header>
        <div>
            <img src="images/blog-49006_1280.png" alt="">
        </div>
        
        <ul>
            <div class="operations">
                <button class="add"><a href="/newpost" >Add Post</a></button>
                <button class="add"><a href="/newcat" >Add Category</a></button>
            </div>
            <li><a href="/">HOME</a></li>
            <li><a href="/posts">POSTS</a></li>
            <li><a href="/categories">CATEGORIES</a></li>
        </ul>
        <form action="/posts" method="get" enctype="multipart/form-data">
            <input type="text" name="search" placeholder="Search">
        </form>
    </header>

    <!-- Top Categories -->
    <section class="categories">
        <h1>Top Categories</h1>
        <div class="cards-container">
            <% cats.forEach(cat => { %>
                <a href="/categories/<%=cat.categoryId%>">
                    <div class="card">
                        <img src="/uploads/categories/<%=cat.picture%>" alt="">
                        <h2><%=cat.name%></h2>
                    </div>
                </a>
            <% }); %>
        </div>
    </section>

    <!-- viral Posts -->
    <section class="posts">
        <h1>Viral Posts</h1>
        <div class="cards-container">
            <% posts.forEach(post => { %>
                <a href="/posts/<%=post.postId%>">
                    <div class="card">
                        <img src="/uploads/posts/<%=post.picture%>" alt="">
                        <h3><%= post.title %></h3>
                        <p class="content"><%= post.content %></p>
                    </div>
                </a>
            <% }); %>
        </div>
    </section>

    <footer>
        &copy; OUAFIDI Oussama
    </footer>
</body>
</html>