<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Indie+Flower&family=Kanit:wght@400;700&display=swap" rel="stylesheet">
    <title>Blog | <%= title %></title>
</head>
<body>
    <!-- header -->
    <header>
        <div>
            <img src="/images/blog-49006_1280.png" alt="">
        </div>

        <ul>
            <li><a href="/">HOME</a></li>
            <li><a href="/posts">POSTS</a></li>
            <li><a href="/categories">CATEGORIES</a></li>
        </ul>
        <form action="/posts" method="get" enctype="multipart/form-data">
            <input type="text" name="search" placeholder="Search">
        </form>
    </header>

    <form action="/posts/update/<%=post.postId%>" method="POST" enctype="multipart/form-data">
        <input type="text" name="title" value="<%=post.title%>">
        <input type="text" name="content" value="<%=post.content%>">
        <input type="file" name="picturePost" value="<%=post.picture%>">
        <select name="categories[]" id="" multiple>
            <% cats.forEach(cat => { %>
                <option value="<%= cat.categoryId %>"><%= cat.name %></option>
            <% }); %>
        </select>
        <button type="submit" class="success">Update Post</button>
    </form>
    <footer>
        &copy; OUAFIDI Oussama
    </footer>
</body>
</html>